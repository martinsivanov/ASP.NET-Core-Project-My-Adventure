@model ReviewFormModel

@{
    this.ViewBag.Title = "Add a revew";
}
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center mb-4">@this.ViewBag.Title</h2>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Your name..">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="3" placeholder="Describe your review.."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}