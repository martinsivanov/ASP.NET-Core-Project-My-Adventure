@model IndexViewModel
@{
    ViewData["Title"] = "Welcome!";
}

@{
    var routes = Model.Routes;
    var firstRoute = routes.Any() ? routes[0] : null;
    var secondRoute = routes.Count > 1 ? routes[1] : null;
    var thirdRoute = routes.Count > 2 ? routes[2] : null;
}

@if (!routes.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to your best Advanture.</h1>
        <p class="lead">There is no routes at the moment.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="Routes" asp-action="Add" class="btn btn-primary btn-lg" role="button">Добави Маршрут</a>
        </p>
    </div>
}
<div class="mb-3"></div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstRoute != null)
        {
        <div class="carousel-item active">
            <img class="d-block w-100" src="@firstRoute.ImageUrl" alt="@firstRoute.Name" height="500" width="500">
            <div class="carousel-caption d-none d-md-block">
                <h5><a class="btn btn-light btn-sm" asp-controller="Routes" asp-action="Details" asp-route-id="@firstRoute.Id">@firstRoute.Name  @firstRoute.Mountain</a></h5>
            </div>
        </div>
        }
        @if (secondRoute != null)
        {
            <div class="carousel-item">
                <img class="d-block w-100" src="@secondRoute.ImageUrl" alt="@secondRoute.Name" height="500" width="500">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-light btn-sm" asp-controller="Routes" asp-action="Details" asp-route-id="@secondRoute.Id">@secondRoute.Name  @secondRoute.Mountain</a></h5>
                </div>
            </div>
        }
        @if (thirdRoute != null)
        {
    <div class="carousel-item">
        <img class="d-block w-100" src="@thirdRoute.ImageUrl" alt="@thirdRoute.Name" height="500" width="500">
        <div class="carousel-caption d-none d-md-block">
            <h5><a class="btn btn-light btn-sm" asp-controller="Routes" asp-action="Details" asp-route-id="@thirdRoute.Id">@thirdRoute.Name  @thirdRoute.Mountain</a></h5>
        </div>
    </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
<div class="mb-4"></div>
</div>
<div class="jumbotron alert-info">
    <div class="row">
        <h2 class="col-md-6 text-center">
            @Model.TotalRoutes Маршрути
        </h2>
        <h2 class="col-md-6 text-center">
            @Model.TotalUsers Потребители
        </h2>
    </div>
</div>