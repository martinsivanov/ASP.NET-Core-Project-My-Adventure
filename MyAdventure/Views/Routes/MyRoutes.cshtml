@model IEnumerable<RouteServiceModel>

@{
    ViewBag.Title = "All Routes";
    ViewBag.AllowRouteEdit = true;
}

<h1 class="text-center">Моите Маршрути</h1>
@if (!Model.Any())
{
    <div class="alert alert-success text-center" role="alert">
        <h2>Нямате Маршрути!</h2>
    </div>
}
<partial name="_RoutesPartial" model="@Model" />