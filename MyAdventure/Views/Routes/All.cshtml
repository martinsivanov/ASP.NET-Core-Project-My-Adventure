@model AllRoutesQueryModel

<form method="get">

    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="">
        </div>
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Region"></label>
                <select asp-for="Region" class="form-control">
                    <option value="">Всички</option>

                    @foreach (var region in Model.Regions)
                    {
                        <option value="@region">@region</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Mountain"></label>
                <select asp-for="Mountain" class="form-control">
                    <option value="">Всички</option>

                    @foreach (var mountain in Model.Mountains)
                    {
                        <option value="@mountain">@mountain</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <input class="btn btn-primary float-sm-none" type="submit" value="Филтрирай" />
</form>

<div class="row mt-5">
    @foreach (var route in Model.Routes)
    {<div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@route.ImageUrl" alt="@route.Name">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@route.Name - @route.Mountain</h5>
                    <a asp-controller="Routes" asp-action="Details" asp-route-Id="@route.Id" class="btn btn-primary">Виж Още</a>
                </div>
            </div>
        </div>
    }
</div>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalRoutes / AllRoutesQueryModel.RoutesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-outline-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Routes"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-mountain="@Model.Mountain"
           asp-route-searchTerm="@Model.SearchTerm">Предишна</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Routes.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-outline-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Routes"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-mountain="@Model.Mountain"
           asp-route-searchTerm="@Model.SearchTerm">Следваща</a>
    </div>
</div>

@if (!Model.Routes.Any())
{
    <h2 class="text-center">No cars found by the given criteria!</h2>
}
