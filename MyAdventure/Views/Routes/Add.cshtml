@model AddRouteFormModel

@{ 
    this.ViewData["Title"] = "Add Route";
}

<form method="post">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center mb-4">Добави маршрут</h2>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Route name..">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="Image Url..">
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartPoint"></label>
                <input asp-for="StartPoint" class="form-control" placeholder="Start point..">
                <span asp-validation-for="StartPoint" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndPoint"></label>
                <input asp-for="EndPoint" class="form-control" placeholder="End point..">
                <span asp-validation-for="EndPoint" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration"></label>
                <input asp-for="Duration" class="form-control" placeholder="Duration..">
                <span asp-validation-for="Duration" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length"></label>
                <input asp-for="Length" class="form-control" placeholder="Length of the route..">
                <span asp-validation-for="Length" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region"></label>
                <input asp-for="Region" class="form-control" placeholder="Region..">
                <span asp-validation-for="Region" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mountain"></label>
                <input asp-for="Mountain" class="form-control" placeholder="Mountain..">
                <span asp-validation-for="Mountain" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="SeasonId" class="form-control">
                    @foreach (var season in Model.Seasons)
                    {
                        <option value="@season.Id">@season.Name</option>
                    }
                </select>
                <span asp-validation-for="SeasonId" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Запази" />
        </div>
    </div>
</form>