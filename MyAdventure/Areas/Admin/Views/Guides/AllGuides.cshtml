@model IEnumerable<GuideServiceModel>

@{
    ViewBag.Title = "Всички Водачи";
}

@if (!Model.Any())
{
    <h2 class="text-center text-danger">Няма Водачи!</h2>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Име на Водач:</th>
                <th scope="col">Телефонен номер:</th>
                <th scope="col"></th>
            </tr>
        </thead>
        @foreach (var guide in Model)
        {
            <tbody>
                <tr>
                    <td>@guide.GuideName</td>
                    <td>@guide.PhoneNumber</td>
                    @if (!guide.Routes.Any())
                    {
                        <td> <a asp-area="Admin" asp-controller="Guides" asp-action="Remove" asp-route-Id="@guide.GuideId" class="btn btn-danger">Премахни</a></td>
                    }
                    else
                    {
                        <td> <a asp-area="Admin" asp-controller="Guides" asp-action="AllGuideRoutes" asp-route-Id="@guide.GuideId" class="btn btn-info">Виж Маршрути</a></td>
                    }
                </tr>
            </tbody>
        }
    </table>
}