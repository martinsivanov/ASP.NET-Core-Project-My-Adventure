@model BlogPostFormModel

@{
    ViewBag.Title = "Add post";
}

<form method="post">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
            <h2 class="heading-margin text-center mb-4">@this.ViewBag.Title</h2>
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" placeholder="Add title of the post..">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author"></label>
                <textarea asp-for="Author" class="form-control" rows="1" placeholder="Add name of author.."></textarea>
                <span asp-validation-for="Author" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control" rows="3" placeholder="Add your content.."></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <textarea asp-for="ImageUrl" class="form-control" rows="1" placeholder="Add image.."></textarea>
                <span asp-validation-for="ImageUrl" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
